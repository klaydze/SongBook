<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_drawer_header_height"
    android:background="?attr/colorPrimary"
    android:orientation="vertical"
    android:elevation="16dp"
    android:paddingTop="@dimen/vertical_margin_16"
    android:paddingLeft="@dimen/horizontal_margin_16"
    android:paddingRight="@dimen/horizontal_margin_16"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/nav_drawer_profile_width"
        android:layout_height="@dimen/nav_drawer_profile_height"
        android:paddingBottom="@dimen/horizontal_margin_8"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_profile" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_padding_56"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textDevName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/horizontal_margin_8"
            android:text="@string/dev_name"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

        <TextView
            android:id="@+id/textDevEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:text="@string/dev_email" />
    </LinearLayout>
</LinearLayout>
